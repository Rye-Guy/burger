 <div class="row">
<h2>Have a burger you want to see on here? Please Input a name for the burger and we can add it to our list.</h2>

<form class="col 8" method="POST" action="/burgers">
        <div class="row">
          <div class="input-field col s12">
            <textarea type="text" id="name" name="burger_name" class="materialize-textarea" data-length="255"></textarea>
            <label for="newBurger">New Burger Name</label>
          </div>
          <button class="btn waves-effect waves-light" type="submit">Add A Burger</button>
        </div>
</form>
</div>
<div class="row" style="display: flex; justify-content: space-evenly;">

  <div class="col 4">
      <h3>Devoured Burgers Sorry :(</h3>
          {{#each burgers}}
            {{#unless this.devoured}}
              <div class='burgersEaten'>
                <div>
                  <button style="magin: 12px;" class="btn disabled">{{this.burger_name}}</button>
                </div>
              </div>
            {{/unless}}
          {{/each}}
  </div>



  <div class="col 4">
      <h3>Click Button to Eat a Burger</h3>
          {{#each burgers}}
            {{#if this.devoured}}
              <div>
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                  <button style="margin: 12px;" class="btn waves-effect waves-dark" type="submit" class='burgersDisplay'> {{this.burger_name}}</button>
                </form>
              </div>
            {{/if}}
          {{/each}}
  </div>
</div>
